---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import MagazineSection from "../components/MagazineSection.astro";
import EducationalLevels from "../components/EducationalLevels.astro";
import LocationSection from "../components/LocationSection.astro";
import DegressSection from "../components/DegressSection.astro";
---

<Layout title="Formando generaciones de líderes">
  <!-- Hero Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h1
        class="text-4xl lg:text-6xl font-light text-[var(--federal-blue)] mb-8 tracking-wide"
      >
        Bienvenido a MEZE
      </h1>
      <div class="w-12 h-px bg-[var(--federal-blue)] mx-auto mb-8"></div>
      <p
        class="text-xl text-gray-600 font-light leading-relaxed max-w-2xl mx-auto"
      >
        Formamos generaciones de líderes con excelencia académica y valores
        humanos
      </p>

      <!-- CTA Button -->
      <div class="mt-12">
        <a
          href="#niveles-educativos"
          class="inline-flex items-center space-x-2 text-[var(--federal-blue)] font-medium hover:text-[var(--navy-blue)] transition-colors duration-200"
        >
          <span>Conoce nuestros programas</span>
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Componentes específicos del inicio -->
  <MagazineSection />
  <div id="niveles-educativos">
    <EducationalLevels />
  </div>
  <DegressSection />
  <LocationSection />
</Layout>
